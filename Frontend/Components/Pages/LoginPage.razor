@page "/login" 
@layout LoginLayout
@using Frontend.ViewModels
@using Microsoft.JSInterop
@inject LoginViewModel ViewModel
@inject IJSRuntime JS
@implements IDisposable

<div class="login-container">
    <div class="login-card">
        <h2>CanilApp - Login</h2>

        @if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
        {
            <div class="alert alert-danger">
                @ViewModel.ErrorMessage
            </div>
        }

        <div class="form-group">
            <label>Email</label>
            <input type="email"
                   class="form-control"
                   @bind="ViewModel.Login"
                   placeholder="seu@email.com"
                   disabled="@ViewModel.IsLoading" />
        </div>

        <div class="form-group">
            <label>Senha</label>
            <input type="password"
                   class="form-control"
                   @bind="ViewModel.Password"
                   placeholder="********"
                   disabled="@ViewModel.IsLoading" />
        </div>

        <button class="btn btn-primary w-100 mb-3"
                @onclick="async () => await ViewModel.LoginCommand.ExecuteAsync(null)"
                disabled="@ViewModel.IsLoading">
            @if (ViewModel.IsLoading)
            {
                <span>⏳ Entrando...</span>
            }
            else
            {
                <span>Entrar</span>
            }
        </button>

        <div class="text-center">
            <button class="btn btn-link"
                    @onclick="() => ViewModel.NavigateToRegisterCommand.Execute(null)"
                    disabled="@ViewModel.IsLoading">
                Não tem conta? Cadastre-se
            </button>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        ViewModel.NavigationRequested += HandleNavigation;
    }

    private async void HandleNavigation(string url)
    {
        await JS.InvokeVoidAsync("eval", $"window.location.href = '{url}'");
    }

    public void Dispose()
    {
        ViewModel.NavigationRequested -= HandleNavigation;
    }
}

