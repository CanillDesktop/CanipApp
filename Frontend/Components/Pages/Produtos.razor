@page "/produtos"
@inject Frontend.ViewModels.ProdutosViewModel VM

<div>
    <label class="textoSimples">Home / Bancos / Produtos</label>

    <h1>Produtos</h1>

    <div class="caixaBranca"></div>

    @if (VM.Carregando){
        <p>Carregando...</p>
    }
    else{
        <ul>
            @foreach (var p in VM.Produtos){
                <li>@p.DescricaoSimples - @p.Quantidade</li>
            }
        </ul>
    }

</div>
<button @onclick="VM.CarregarProdutosAsync">Atualizar</button>
